/* 列表页面样式 */

.container {
  padding: 30rpx 20rpx;
}

/* 备忘录列表项样式 */
.item {
  margin-bottom: 0;
}

/* 备忘录卡片容器 */
.note-card {
  display: flex;
  flex-direction: column;
  position: relative;
  padding-right: 80rpx;
}

/* 备忘录操作按钮区域 */
.note-actions {
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  display: flex;
  flex-direction: column;
}

/* 删除按钮样式 */
.delete-btn {
  width: 60rpx;
  height: 60rpx;
  padding: 0;
  margin: 0;
  line-height: 60rpx;
  text-align: center;
  font-size: 24rpx;
  background-color: #ff5252;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 空状态提示 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-state-text {
  color: var(--text-secondary);
  font-size: 28rpx;
  margin-top: 20rpx;
}

/* 新增按钮 */
.add-btn {
  position: fixed;
  bottom: 40rpx;
  right: 40rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: var(--primary-color);
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 50rpx;
  box-shadow: 0 4rpx 12rpx var(--shadow-color);
  z-index: 100;
}