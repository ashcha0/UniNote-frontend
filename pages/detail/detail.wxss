/* 详情页面样式 */

.container {
  padding: 30rpx 20rpx;
}

/* 详情卡片 */
.item {
  background-color: var(--card-background);
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx var(--shadow-color);
  padding: 24rpx;
  margin-bottom: 30rpx;
}

.item text {
  display: block;
  margin-bottom: 16rpx;
  font-size: 28rpx;
  color: var(--text-secondary);
}

/* 表单样式增强 */
.form-item {
  background-color: var(--card-background);
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx var(--shadow-color);
  padding: 24rpx;
  margin-bottom: 20rpx;
}

.form-item text {
  font-weight: 500;
  color: var(--text-color);
}

/* 按钮样式 */
button {
  margin: 30rpx 0;
}

/* 返回按钮 */
.back-btn {
  background-color: var(--text-secondary);
  margin-top: 10rpx;
}